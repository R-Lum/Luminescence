# -- Exclude R stuff --
^NEWS\.Rmd$
^NEWS\.html$
^cran-comments\.md$
^cran-comments\.html$
^\.Rprofile$

# -- Exclude RStudio files --
^.*\.Rproj$
^\.Rproj\.user$
^packrat/$
^tests/testdata$
^\test\*
^_pkgdown\.yml$
^docs$
^.*\.sh$

# -- Exclude test suite files --
^\.travis\.yml$
^appveyor\.yml$
^codecov\.yml$

# -- Exclude GitHub stuff --
^LICENSE$
^README\.Rmd$
^README\.html$

# -- Exclude vignettes cache and files --
^vignettes/.*cache$
^vignettes/.*files$
^vignettes/.*\.xsyg$
^vignettes/.*\.bib$

# -- Package 'Luminescence' stuff -- 
^Luminescence\..*$